<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sell</title>
    <link rel="stylesheet" type="text/css" href="allstyles.css">
    <link rel="stylesheet" type="text/css" href="index.css">
    <link rel="stylesheet" type="text/css" href="main.css">
</head>
<body>
    <%- include('navbar.ejs') %>
    
    <section id="sell" class="container">
        <form action="/savevehicle" method="POST" enctype="multipart/form-data">
            <h2>Sell</h2>
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="title" value="title" required>
            </div>
            <div class="form-group">
                <label for="make">Make:</label>
                <input type="text" class="form-control" id="make" name="make" value="toyota" required>
            </div>
            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" class="form-control" id="model" name="model" value="hiace" required>
            </div>
            <div class="form-group">
                <label for="trim">Trim:</label>
                <input type="text" class="form-control" id="trim" name="trim" value="xc" required>
            </div>
            <div class="form-group">
                <label for="year">Model Year:</label>
                <input type="number" class="form-control" id="year" name="year" value="100" required>
            </div>
            <div class="form-group">
                <label for="regyear">Registration Year:</label>
                <input type="number" class="form-control" id="regyear" name="regyear" value="100" required>
            </div>
            <div class="form-group">
                <label for="plate">Plate Initials:</label>
                <input type="text" class="form-control" id="plate" name="plate" value="CA" required>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" class="form-control" id="price" name="price" value="100" required>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="negotiable" name="negotiable" value="no" onchange="this.value=this.checked?'yes':'no'">
                <label class="form-check-label" for="negotiable">Negotiable</label>
            </div>
            <div class="form-group">
                <label for="condition">Condition:</label>
                <input type="text" class="form-control" id="condition" name="condition" value="good" required>
            </div>
            <div class="form-group">
                <label for="mileage">Mileage:</label>
                <input type="text" class="form-control" id="mileage" name="mileage" value="100" required>
            </div>
            <div class="form-group">
                <label for="exterior">Exterior:</label>
                <input type="text" class="form-control" id="exterior" name="exterior" value="black" required>
            </div>
            <div class="form-group">
                <label for="interior">Interior:</label>
                <input type="text" class="form-control" id="interior" name="interior" value="black" required>
            </div>
            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" class="form-control" id="location" name="location" value="colombo" required>
            </div>
            <div class="form-group">
                <label for="images">Upload Images:</label><br>
                <input type="file" id="images" name="images" class="form-control-file" multiple>
                <small class="form-text text-muted">You can upload multiple images.</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>
        
    
<style>
   
</style>
</body>
</html>